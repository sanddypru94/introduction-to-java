
public class Solution {

	public static void rowWiseSum(int[][] mat) {
		//Your code goes here
          int sum=1,add=0;
        int r=mat.length;
        if(r==0)
            return;
        int c=mat[0].length;
        
	    for(int i=0;i<r;i++) {
		for(int j=0;j<c;j++) {
			add+=mat[i][j];
			//System.out.print(add+" ");
			
		}
            System.out.print(add+" ");
            add=0;
	
		
		
	}
	}

}
